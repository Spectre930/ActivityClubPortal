@model IEnumerable<ActivityClubPortal.API.Resources.GuideResource>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h2 class="m-0">Guides List</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-md-6">
                            <h4>Create New Guide</h4>
                            <a asp-controller="Guides" asp-action="Create" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Create New Guide
                            </a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Date Of Birth</th>
                                    <th>Profession</th>
                                    <th>Image</th>
                                    <th>Events</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var obj in Model)
                                {
                                    <tr>
                                        <td>@obj.FullName</td>
                                        <td>@obj.Email</td>
                                        <td>@obj.DateOfBirth</td>
                                        <td>@obj.Profession</td>
                                        <td>
                                            <img src="@obj.ImageUrl" class="img-fluid rounded" alt="Image" />
                                        </td>
                                        <td>
                                            <a class="btn btn-primary btn-sm" asp-controller="Guides" asp-action="GuideEvents" asp-route-id="@obj.Id">View Events</a>
                                        </td>
                                        <td>
                                            <a class="btn btn-warning btn-sm" asp-controller="Guides" asp-action="Edit" asp-route-id="@obj.Id">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-danger btn-sm" asp-controller="Guides" asp-action="Delete" asp-route-id="@obj.Id">
                                                <i class="bi bi-x-circle"></i> Delete
                                            </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-success btn-sm" asp-controller="Guides" asp-action="GuideAnEvent" asp-route-id="@obj.Id">
                                               Guide Event
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>