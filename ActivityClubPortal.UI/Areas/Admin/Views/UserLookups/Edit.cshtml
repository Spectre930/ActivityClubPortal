@model ActivityClubPortal.API.Resources.LookupResource

<form method="post" asp-action="Edit" enctype="multipart/form-data" asp-controller="UserLookups">
    <input asp-for="Id" hidden class="form-control" />
    <input asp-for="ImageUrl" hidden class="form-control" />
    <div class="border p-3 mt-4 row bg-light rounded">
        <div class="row pb-2">
            <h2 class="bg-warning rounded text-white">Update Lookup</h2>
            <hr />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Code">Code</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Orders">Orders</label>
            <input asp-for="Orders" class="form-control" />
            <span asp-validation-for="Orders" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="ImageUrl">Image</label>
            <input type="file" name="file" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        @* Add any other properties you have in the LookupResource *@
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" style="font-size:smaller; width:60%;" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-12">
            <button type="submit" class="btn btn-warning" style="width:150px">Update</button>
            <a asp-controller="UserLookups" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
</form>

