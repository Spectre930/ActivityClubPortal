@model ActivityClubPortal.API.Resources.EventResource;

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden class="form-control" />
    <div class="border p-3 mt-4 row bg-light rounded">
        <div class="row pb-2">
            <h2 class="bg-danger rounded text-white">Delete Event</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3 col-6">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Destination">Destination</label>
            <input asp-for="Destination" class="form-control" />
            <span asp-validation-for="Destination" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Cost">Cost</label>
            <input asp-for="Cost" class="form-control" />
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Status">Status</label>
            <input type="Status" asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="DateFrom">Date From</label>
            <input type="date" asp-for="DateFrom" class="form-control" />
            <span asp-validation-for="DateFrom" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="DateTo">Date To</label>
            <input type="date" asp-for="DateTo" class="form-control" />
            <span asp-validation-for="DateTo" class="text-danger"></span>
        </div>
        @if (ViewBag.Message != null)
        {
            <div class="alert  alert-danger alert-dismissible fade show" style="font-size:smaller; width:60% ;" role="alert">
                @ViewBag.Message
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-12">
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="Events" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
</form>
