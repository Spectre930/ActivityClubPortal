@model IEnumerable<ActivityClubPortal.API.Resources.GuideResource>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h2 class="m-0">Event Guides</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Full Name</th>
                                    <th>Email</th>
                                    <th>Date Of Birth</th>
                                    <th>Profession</th>
                                    <th>Image</th>
                                    <th>Events</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var obj in Model)
                                {
                                    <tr>
                                        <td>@obj.FullName</td>
                                        <td>@obj.Email</td>
                                        <td>@obj.DateOfBirth</td>
                                        <td>@obj.Profession</td>
                                        <td>
                                            <img src="@obj.ImageUrl" class="img-fluid rounded" alt="Image" />
                                        </td>
                                        <td>
                                            <a class="btn btn-primary btn-sm" asp-controller="Guides" asp-action="GuideEvents" asp-route-id="@obj.Id">View Events</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>